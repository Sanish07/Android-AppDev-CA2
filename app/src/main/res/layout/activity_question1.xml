<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20sp"
    tools:context=".Question1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/q1_head"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:textColor="#7B83EB"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/teams_logo"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="#808080"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="@string/teams_text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:padding="13sp"
        android:hint="Enter email, phone, or Skype"/>

    <Button
        android:layout_width="225sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:backgroundTint="#7E83EB"
        android:fontFamily="sans-serif-medium"
        android:text="Sign in"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="#7E83EB"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Get help with signing in"/>

    <Button
        android:layout_width="225sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="#7E83EB"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="Join a meeting"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="225sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:textColor="#7E83EB"
        android:drawableLeft="@drawable/windows_logo"
        android:text="Sign up for free"
        android:textAllCaps="false"/>


</LinearLayout>